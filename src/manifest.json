{
  "name": "ThymioApp",
  "description": "Thymio II Robot Interface",
  "version": "0.0.3",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "serial",
    "usb",
    {
      "usbDevices": [
        {
          "vendorId": 1559,
          "productId": 10
        }
      ]
    }
  ],
  "icons": {
    "16": "assets/thymio-16.png",
    "128": "assets/thymio-128.png"
  }
}
